<!DOCTYPE html>
<html>
  <head>
    <title>RoRChalenger</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Crimson+Text|Work+Sans:400,700" rel="stylesheet">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
    <% flash.each do |key, value| %>
      <% case key%>
      <% when 'notice' %>
        <% key = "primary"%>
      <% when 'info' %>
        <% key = "success"%>
      <% when 'alert' %>
        <% key = "danger"%>
      <% when 'warning' %>
        <% key = "warning"%>
      <% when 'danger' %>
        <% key = "warning"%> 
      <% else %>
        <% key = "light"%>
      <% end %>
      <div class="alert alert-<%= key %> alert-dismissible fade show" role="alert" style="position: fixed;left: 0;bottom: 0;width: 100%;">  
        <%= value %> 
      </div>
    <% end %>
  </body>
</html>
